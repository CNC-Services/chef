# Deploy and run the collect script
## Purcell
case node['hostname']
when 'Purcell'
  cookbook_file "/home/cnc-zab/scripts/purcell_list_J9729A.txt" do
    source "purcell_list_J9729A.txt"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_upgrade_J9729A.py" do
    source "purcell_upgrade_J9729A.py"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_list_J9627A.txt" do
    source "purcell_list_J9627A.txt"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_upgrade_J9627A.py" do
    source "purcell_upgrade_J9627A.py"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_list_J9625A.txt" do
    source "purcell_list_J9625A.txt"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_upgrade_J9625A.py" do
    source "purcell_upgrade_J9625A.py"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_list.txt" do
    source "purcell_list.txt"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_collect.py" do
    source "purcell_collect.py"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_collect.sh" do
    source "purcell_collect.sh"
  end
  cookbook_file "/home/cnc-zab/scripts/purcell_copy.sh" do
    source "purcell_copy.sh"
  end
  execute 'collect' do
    command "bash /home/cnc-zab/scripts/purcell_collect.sh"
  end
  execute 'copy' do
    command "sh /home/cnc-zab/scripts/purcell_copy.sh"
  end
else
 execute 'echo' do
   command "echo hostname does not match"
 end
end
